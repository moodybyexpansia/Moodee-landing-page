---
import { Block as DefaultBlock } from "astro-portabletext/components";
import type { Props as $, Block } from "astro-portabletext/types";

export type Props = $<Block>;

const props = Astro.props;
---

<DefaultBlock {...props}><slot /></DefaultBlock>

<style>
  h1 {
    font-size: 2rem;
    line-height: 1.2;
    font-weight: 800;
    padding-top: 2rem;
  }
  h2 {
    font-size: 1.5rem;
    line-height: 1.2;
    font-weight: 700;
    padding-top: 1.5rem;
    padding-bottom: 0.25rem;
  }
  h3 {
    font-size: 1.25rem;
    line-height: 1;
    font-weight: 600;
  }
  blockquote {
    border-left: 0.5rem solid #ccc;
    margin-left: 0;
    margin-right: 2rem;
    padding-left: 2rem;
  }
</style>
