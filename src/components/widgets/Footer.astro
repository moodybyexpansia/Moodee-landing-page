---
import { Button } from "../ui/button";

interface Link {
  text?: string;
  href?: string;
  ariaLabel?: string;
  icon?: string;
}

interface Links {
  title?: string;
  links: Array<Link>;
}

export interface Props {
  links: Array<Links>;
  socialLinks: Array<Link>;
  footNote?: string;
  theme?: string;
}

const {
  socialLinks = [],
  links = [],
  footNote = "",
  theme = "light",
} = Astro.props;
---

<footer class="relative mt-24 pb-8">
  <div class="pointer-events-none absolute bottom-0 -z-10" aria-hidden="true">
    <img
      alt="shadow"
      src="/moodee-footer-shadow.png"
      class="h-auto w-full object-cover"
    />
  </div>

  <div class="mx-auto mb-28 max-w-4xl text-center">
    <h2 class="text-4xl font-semibold leading-tight text-white">
      Essayez Moodee dès aujourd’hui !
    </h2>
    <div
      class="mt-4 flex flex-col items-center gap-4 text-xl md:flex-row md:justify-center"
    >
      <Button className="h-12 rounded-xl border border-white px-8 text-xl"
        >Obtenir une démo</Button
      >
      <Button variant="outline" className="h-12 rounded-xl px-8 text-xl"
        >Commencer</Button
      >
    </div>
  </div>
  <div class="mx-auto w-11/12 max-w-7xl">
    <div
      class="flex flex-col items-center justify-between gap-4 text-white md:flex-row md:gap-8"
    >
      <a href="/" class="text-xl font-bold transition"> Moodee </a>

      <div class="flex flex-col gap-2 md:flex-row md:gap-8">
        <a href="/privacy" class="text-sm transition hover:text-dark">
          Privacy Policy
        </a>
        <a href="/terms" class="text-sm transition hover:text-dark">
          Terms of Service
        </a>
        <a href="/contact" class="text-sm transition hover:text-dark">
          Contact
        </a>
      </div>
    </div>
  </div>
</footer>
