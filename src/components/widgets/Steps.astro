---
export interface Step {
  number: number;
  title: string;
  description: string;
  x: number;
  y: number;
}

const steps: Step[] = [
  {
    number: 1,
    title: "Collecte de données sur tous réseaux",
    description:
      "Moodee se nourrit de posts, commentaires, avis et actualités de tous les médias sociaux.",
    x: 100, // X position on the curve
    y: 300, // Y position on the curve
  },
  {
    number: 2,
    title: "Génération de données améliorées",
    description:
      "Moodee transforme les posts et commentaires en métadonnées enrichies, sentiments client, mention d'achat ou de la concurrence, les mots clefs…",
    x: 600,
    y: 250,
  },
  {
    number: 3,
    title: "Analyses et Statistiques sur mesure",
    description:
      "Moodee transforme vos données en réponses instantanées et analyses précises pour une stratégie affinée.",
    x: 1150,
    y: 150,
  },
];
---

<section class="relative h-screen bg-blue-500 py-16 text-white">
  <!-- Title Section -->
  <div class="mx-auto max-w-4xl text-center">
    <h2 class="text-4xl font-bold leading-tight md:text-5xl">
      Moodee : L’union parfaite de l’IA et des données média
    </h2>
    <p class="mt-4 text-lg md:text-xl">
      Découvrez comment Moodee combine des données ultra précises avec l’IA pour
      vous offrir le meilleur des deux technologies.
    </p>
  </div>

  <!-- SVG Curve -->
  <div class="relative w-full">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 1200 400"
      fill="none"
      stroke="white"
      stroke-width="4"
      class="absolute left-0 top-0 h-auto w-full"
    >
      <path d="M50 300 Q300 100 600 250 T1150 150"></path>
    </svg>

    <!-- Steps -->
    <div class="relative z-10">
      {
        steps.map((step) => (
          <div
            class="absolute flex flex-col items-center text-center"
            style={`left: ${step.x}px; top: ${step.y}px; transform: translate(-50%, -50%);`}
          >
            <div class="flex h-16 w-16 items-center justify-center rounded-full bg-white text-2xl font-bold text-blue-500">
              {step.number}
            </div>
            <h3 class="mt-4 text-lg font-bold">{step.title}</h3>
            <p class="mt-2 text-sm leading-relaxed">{step.description}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
